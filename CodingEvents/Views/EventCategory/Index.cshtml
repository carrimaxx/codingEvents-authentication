@*EventCategory Index*@

@using CodingEvents.Models

@model List<EventCategory>

<h1>@ViewBag.title</h1>


@if (Model.Count == 0)
{
    <h3>No event categories yet!</h3>
    <p>
        <a class="btn btn-secondary" asp-controller="EventCategory" asp-action="Create">Add Event Category</a>
    </p>
    <p>
        <a class="btn btn-secondary" asp-controller="Events" asp-action="Add">Add Event</a>
    </p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th></th>
        </tr>

        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Name</td>
            </tr>
        }
    </table>
}